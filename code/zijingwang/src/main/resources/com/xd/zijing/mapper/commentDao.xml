<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xd.zijing.mapper.CommentDao">

    <select id="findAll" resultType="Comment" parameterType="int">
        select
            commentId,author,title,content,publishTime,fromIP
        from
            sys_comment
        order by commentId
        limit #{offset},#{size}
    </select>

    <select id="count" resultType="int">
        select
            count(1)
        from
            sys_comment
    </select>

    <delete id="deleteById" parameterType="int">
        delete
        from
            sys_comment
        where
            commentId=#{commentId}
    </delete>

    <select id="queryById" parameterType="int" resultType="Comment">
        select
            commentId,author,title,content,publishTime,fromIP
        from sys_comment
        where commentId=#{commentId}
    </select>

    <update id="updateComment" parameterType="Comment">
        update
          sys_comment
        set
          author=#{author},#{title},#{content},#{publishTime},#{fromIp}
        where commentId=#{commentId}
    </update>

    <insert id="addComment" parameterType="Comment">
        insert into
           sys_comment(author,title,content,publishTime,fromIP)
        values
           (#{author},#{title},#{content},#{publishTime},#{fromIP})
    </insert>
</mapper>